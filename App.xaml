<Application x:Class="InverTrack.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:InverTrack"
             StartupUri="AuthWindow.xaml">
    <Application.Resources>
        <!-- Paleta clara por defecto -->
        <SolidColorBrush x:Key="AppBackgroundBrush" Color="#F3F4F6"/>
        <SolidColorBrush x:Key="CardBackgroundBrush" Color="#FFFFFF"/>
        <!-- Azul oscuro y verde oscuro como acentos principales -->
        <SolidColorBrush x:Key="PrimaryBrush" Color="#1D4ED8"/>
        <SolidColorBrush x:Key="SecondaryBrush" Color="#1E40AF"/>
        <SolidColorBrush x:Key="AccentBuyBrush" Color="#166534"/>
        <SolidColorBrush x:Key="AccentSellBrush" Color="#F44336"/>
        <SolidColorBrush x:Key="TextPrimaryBrush" Color="#111827"/>
        <SolidColorBrush x:Key="TextSecondaryBrush" Color="#4B5563"/>
        <SolidColorBrush x:Key="InputBackgroundBrush" Color="#F9FAFB"/>
        <SolidColorBrush x:Key="InputBorderBrush" Color="#D1D5DB"/>
        <SolidColorBrush x:Key="ChartBackgroundBrush" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="WindowBorderBrush" Color="#D1D5DB"/>

        <!-- Paleta oscura -->
        <SolidColorBrush x:Key="DarkAppBackgroundBrush" Color="#111827"/>
        <SolidColorBrush x:Key="DarkCardBackgroundBrush" Color="#1F2937"/>
        <SolidColorBrush x:Key="DarkPrimaryBrush" Color="#2563EB"/>
        <SolidColorBrush x:Key="DarkSecondaryBrush" Color="#1D4ED8"/>
        <SolidColorBrush x:Key="DarkTextPrimaryBrush" Color="#F9FAFB"/>
        <SolidColorBrush x:Key="DarkTextSecondaryBrush" Color="#9CA3AF"/>
        <SolidColorBrush x:Key="DarkInputBackgroundBrush" Color="#111827"/>
        <SolidColorBrush x:Key="DarkInputBorderBrush" Color="#4B5563"/>
        <SolidColorBrush x:Key="DarkChartBackgroundBrush" Color="#111827"/>

        <!-- Estilo base para TextBox numéricos -->
        <Style x:Key="NumericTextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="HorizontalContentAlignment" Value="Right"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="{DynamicResource InputBackgroundBrush}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource InputBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="CaretBrush" Value="{DynamicResource TextPrimaryBrush}"/>
        </Style>

        <!-- Estilo base redondeado para botones -->
        <Style x:Key="RoundedButtonBaseStyle" TargetType="Button">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
            <Setter Property="Padding" Value="8,3"/>
            <Setter Property="BorderBrush" Value="{DynamicResource WindowBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Estilo global para botones: usa el base redondeado -->
        <Style TargetType="Button" BasedOn="{StaticResource RoundedButtonBaseStyle}" />

        <!-- Estilo para ToggleButton tipo "pill" (usado por el botón de velas) -->
        <Style x:Key="TogglePillStyle" TargetType="ToggleButton">
            <Setter Property="Foreground" Value="{DynamicResource TextPrimaryBrush}"/>
            <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
            <Setter Property="Padding" Value="8,3"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderBrush" Value="{DynamicResource WindowBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="14"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderBrush" Value="{DynamicResource PrimaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Botón primario (para reporte, etc.) -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button" BasedOn="{StaticResource RoundedButtonBaseStyle}">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="{DynamicResource SecondaryBrush}"/>
            <Setter Property="Padding" Value="12,4"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="{DynamicResource PrimaryBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Opacity" Value="0.85"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>
