<Window x:Class="InverTrack.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ajustes de cuenta" Height="480" Width="560" WindowStartupLocation="CenterOwner"
        Background="{DynamicResource AppBackgroundBrush}" ResizeMode="NoResize">
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <Border Background="{DynamicResource CardBackgroundBrush}" CornerRadius="8" Margin="20" Padding="20">
                <StackPanel>
                <TextBlock Text="Ajustes de cuenta" FontSize="18" FontWeight="Bold" Foreground="{DynamicResource PrimaryBrush}" Margin="0,0,0,8"/>
                <TextBlock x:Name="LblUsuario" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,16"/>

                <!-- Sección de correo -->
                <GroupBox Header="Correo electrónico" Margin="0,0,0,10" 
                          Foreground="{DynamicResource TextPrimaryBrush}" BorderBrush="{DynamicResource WindowBorderBrush}">
                    <StackPanel Margin="8">
                        <TextBlock x:Name="LblCorreoActual" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" Margin="0,0,0,6"/>

                        <TextBlock Text="Nuevo correo" Margin="0,0,0,4" Foreground="{DynamicResource TextSecondaryBrush}"/>
                        <TextBox x:Name="TxtNuevoEmail" Padding="6" Margin="0,0,0,6" FontSize="12"
                                 Background="{DynamicResource InputBackgroundBrush}" Foreground="{DynamicResource TextPrimaryBrush}" BorderBrush="{DynamicResource InputBorderBrush}"/>

                        <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                            <Button x:Name="BtnEnviarCodigoEmail" Content="Enviar código" Click="BtnEnviarCodigoEmail_Click" 
                                    Style="{StaticResource PrimaryButtonStyle}" Height="26" Width="120"/>
                        </StackPanel>

                        <StackPanel x:Name="PanelCodigoEmail" Visibility="Collapsed">
                            <TextBlock Text="Código de verificación" Margin="0,4,0,4" Foreground="{DynamicResource TextSecondaryBrush}"/>
                            <TextBox x:Name="TxtCodigoEmail" Padding="6" Margin="0,0,0,6" FontSize="12"
                                     Background="{DynamicResource InputBackgroundBrush}" Foreground="{DynamicResource TextPrimaryBrush}" BorderBrush="{DynamicResource InputBorderBrush}"/>
                            <Button x:Name="BtnConfirmarEmail" Content="Confirmar correo" Click="BtnConfirmarEmail_Click" 
                                    Style="{StaticResource PrimaryButtonStyle}" Height="26" Width="140"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <!-- Sección de contraseña -->
                <GroupBox Header="Cambiar contraseña" Margin="0,0,0,10"
                          Foreground="{DynamicResource TextPrimaryBrush}" BorderBrush="{DynamicResource WindowBorderBrush}">
                    <StackPanel Margin="8">
                        <TextBlock x:Name="LblInfoPassword" FontSize="12" Foreground="{DynamicResource TextSecondaryBrush}" TextWrapping="Wrap" Margin="0,0,0,6"/>

                        <Button x:Name="BtnEnviarCodigoPwd" Content="Enviar código al correo" Click="BtnEnviarCodigoPwd_Click"
                                Style="{StaticResource PrimaryButtonStyle}" Height="26" Width="170" Margin="0,0,0,6"/>

                        <StackPanel x:Name="PanelCodigoPwd" Visibility="Collapsed">
                            <TextBlock Text="Código de verificación" Margin="0,4,0,4" Foreground="{DynamicResource TextSecondaryBrush}"/>
                            <TextBox x:Name="TxtCodigoPwd" Padding="6" Margin="0,0,0,6" FontSize="12"
                                     Background="{DynamicResource InputBackgroundBrush}" Foreground="{DynamicResource TextPrimaryBrush}" BorderBrush="{DynamicResource InputBorderBrush}"/>

                            <TextBlock Text="Nueva contraseña" Margin="0,4,0,4" Foreground="{DynamicResource TextSecondaryBrush}"/>
                            <PasswordBox x:Name="TxtNuevaPwd" Padding="6" Margin="0,0,0,6" FontSize="12"
                                         Background="{DynamicResource InputBackgroundBrush}" Foreground="{DynamicResource TextPrimaryBrush}" BorderBrush="{DynamicResource InputBorderBrush}"/>

                            <TextBlock Text="Confirmar contraseña" Margin="0,4,0,4" Foreground="{DynamicResource TextSecondaryBrush}"/>
                            <PasswordBox x:Name="TxtConfirmarPwd" Padding="6" Margin="0,0,0,6" FontSize="12"
                                         Background="{DynamicResource InputBackgroundBrush}" Foreground="{DynamicResource TextPrimaryBrush}" BorderBrush="{DynamicResource InputBorderBrush}"/>

                            <Button x:Name="BtnConfirmarPwd" Content="Confirmar cambio" Click="BtnConfirmarPwd_Click"
                                    Style="{StaticResource PrimaryButtonStyle}" Height="26" Width="150"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <TextBlock x:Name="LblError" Foreground="{DynamicResource AccentSellBrush}" FontSize="11" Margin="0,4,0,0" TextWrapping="Wrap"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button Content="Cerrar" Width="90" Height="28" Click="BtnCerrar_Click"/>
                </StackPanel>
                </StackPanel>
            </Border>
        </ScrollViewer>
    </Grid>
</Window>
